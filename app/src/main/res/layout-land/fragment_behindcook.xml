<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <RadioGroup
            android:id="@+id/rg_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_to_white_bg_3_shape"
            android:orientation="horizontal"
            android:padding="0.5dp">

            <RadioButton
                android:id="@+id/rb_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_to_blue_bg_selector1"
                android:button="@null"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="@string/all"
                android:textColor="@color/black_to_white"
                android:textSize="16sp"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_color"/>

            <RadioButton
                android:id="@+id/rb_eat_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_to_blue_bg_selector2"
                android:button="@null"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="@string/eat_in"
                android:textColor="@color/black_to_white"
                android:textSize="16sp"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_color"/>

            <RadioButton
                android:id="@+id/rb_eat_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_to_blue_bg_selector3"
                android:button="@null"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="@string/eat_out"
                android:textColor="@color/black_to_white"
                android:textSize="16sp"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_voice"
            android:layout_toRightOf="@+id/rg_style"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/tv_no_cooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/blue_dot"
                android:drawablePadding="10dp"
                android:text="未烹饪　5"
                android:maxLines="1"
                android:textColor="@color/t313131"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_cooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/orange_dot"
                android:drawablePadding="10dp"
                android:text="正在烹饪　12"
                android:maxLines="1"
                android:textColor="@color/t313131"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_already_cooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/green_dot"
                android:drawablePadding="10dp"
                android:text="已经烹饪　8"
                android:maxLines="1"
                android:textColor="@color/t313131"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_cannot_cooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/gray_dot"
                android:drawablePadding="10dp"
                android:text="不能烹饪　1"
                android:maxLines="1"
                android:textColor="@color/t313131"
                android:textSize="15sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/iv_set"
            android:src="@mipmap/ic_voice"/>

        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_set"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dishes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="10dp"/>
</LinearLayout>